<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_card"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/store_card_height"
    android:background="@color/colorWhite"
    android:layout_marginStart="@dimen/product_card_margin"
    android:layout_marginTop="@dimen/product_card_margin"
    card_view:cardCornerRadius="@dimen/product_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height">

            <ImageView
                android:id="@+id/id_store_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@color/colorWhiteGrey" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="@string/store_name_hint"
                android:gravity="start|center_vertical"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/price_text_size" />

            <TextView
                android:id="@+id/id_store_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="end|center_vertical"
                android:hint="@string/viewed_hint_text"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/text_size_x_small" />

            <TextView
                android:id="@+id/id_store_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:hint="@string/store_location_hint"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/id_store_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/store_category_hint"
                android:maxHeight="18dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/store_name_text_size" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>